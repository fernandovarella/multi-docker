{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
      {
        "name": "client",
        "image": "fernandovarella/multi-client",
        "hostname": "client",
        "essential": false
      },
      {
        "name": "server",
        "image": "fernandovarella/multi-server",
        "hostname": "api",
        "essential": false
      },
      {
        "name": "worker",
        "image": "fernandovarella/multi-worker",
        "hostname": "worker",
        "essential": false
      },
      {
        "name": "nginx",
        "image": "fernandovarella/multi-nginx",
        "hostname": "nginx",
        "essential": true,
        "portMappings": [
          {
            "hostPort": 80,
            "containerPort": 80
          }
        ],
        "links": ["client", "server"],
        "memory": 128
      }
    ]
  }